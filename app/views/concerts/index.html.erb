<p id="notice"><%= notice %></p>

<h1 class= "mb-5 text-center">Concerts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Number of attendees</th>
      <th>Duration</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
        <td><%= concert.number_of_attendees %></td>
        <td><%= concert.duration %></td>
        <td><%= concert.group %></td>
        <td><%= link_to 'Show', concert , class: "btn btn-primary "%></td>
        <td><%= link_to 'Edit', edit_concert_path(concert) , class: "btn btn-warning"%></td>
        <td><%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Concert', new_concert_path, class: "btn btn-primary" %>
