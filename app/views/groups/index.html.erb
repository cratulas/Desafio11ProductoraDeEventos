<p id="notice"><%= notice %></p>

<h1 class= "mb-5 text-center">Groups</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of members</th>
      <th>Debut date</th>
      <th>Type</th>
      <th>Total concerts</th>
      <th>how_many_concerts</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.number_of_members %></td>
        <td><%= group.debut_date %></td>
        <td><%= group.status %></td>
        <td><%= group.concerts_counts %></td>
        <td><%= group.how_many_concerts %></td>
        <td><%= link_to 'Show', group, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_group_path(group), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path, class: "btn btn-primary"%>



